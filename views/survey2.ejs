<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Social Media Survey</title>
</head>
<body>
    <form id="surveyForm">
        <!-- Age -->
        <label for="age">Age: </label>
        <input type="number" id="age" name="age" min="10" max="100" required><br>

        <!-- Gender -->
        <label for="gender">Gender: </label>
        <input type="radio" id="genderMale" name="gender" value="Male"><label for="genderMale"> Male</label>
        <input type="radio" id="genderFemale" name="gender" value="Female"><label for="genderFemale"> Female</label>
        <input type="radio" id="genderOther" name="gender" value="Other"><label for="genderOther"> Other</label><br><br>

        <!-- Relationship Status -->
        <label for="relationshipStatus">Relationship Status: </label>
        <input type="radio" id="relationshipStatusYes" name="relationshipStatus" value="In a relationship"><label for="relationshipStatusYes"> In a relationship</label>
        <input type="radio" id="relationshipStatusSingle" name="relationshipStatus" value="Single"><label for="relationshipStatusSingle"> Single</label>
        <input type="radio" id="relationshipStatusMarried" name="relationshipStatus" value="Married"><label for="relationshipStatusMarried"> Married</label>
        <input type="radio" id="relationshipStatusDivorced" name="relationshipStatus" value="Divorced"><label for="relationshipStatusDivorced"> Divorced</label><br><br>

        <!-- Occupation -->
        <label for="occupation">Occupation: </label>
        <input type="radio" id="occupationUniStud" name="occupation" value="University Student"><label for="occupationUniStud"> University Student</label>
        <input type="radio" id="occupationSchStud" name="occupation" value="School Student"><label for="occupationSchStud"> School Student</label>
        <input type="radio" id="occupationSalWrkr" name="occupation" value="Salaried Worker"><label for="occupationSalWrkr"> Salaried Worker</label>
        <input type="radio" id="occupationRetired" name="occupation" value="Retired"><label for="occupationRetired"> Retired</label><br><br>

        <!-- Media User -->
        <label for="mediaUser">Do you use social media? </label>
        <input type="radio" id="mediaUserYes" name="mediaUser" value="Yes"><label for="mediaUserYes"> Yes</label>
        <input type="radio" id="mediaUserNo" name="mediaUser" value="No"><label for="mediaUserNo"> No</label><br><br>


        <!-- Average Time Spent on Social Media Every Day -->
        <label for="avgTime">Average time spent on social media every day: </label>
        <select name="avgTime" id="avgTime">
            <option value="Less than an Hour">Less than an Hour</option>
            <option value="Between 1 and 2 hours">Between 1 and 2 hours</option>
            <option value="Between 2 and 3 hours">Between 2 and 3 hours</option>
            <option value="Between 3 and 4 hours">Between 3 and 4 hours</option>
            <option value="Between 4 and 5 hours">Between 4 and 5 hours</option>
            <option value="More than 5 hours">More than 5 hours</option>
        </select><br><br>

        <!-- How often do you find yourself using social media without a specific purpose? -->
        <label for="purpose">How often do you use social media without a specific purpose? </label>
        <ul class="likert">
            <div class="slidecontainer">
               <p>1<input type="range" min="1" max="5" value="3">5</p>
            </div>
        </ul>

        <!-- How often do you get distracted by social media when you are busy doing something? -->
        <label for="distraction">How often do you get distracted by social media when you are busy? </label>
        <ul class="likert">
            <div class="slidecontainer">
                <p>1<input type="range" min="1" max="5" value="3">5</p>
             </div>
        </ul>

        <!-- Do you feel restless if you haven’t used social media in a while? -->
        <label for="restless">Do you feel restless if you haven’t used social media in a while? </label>
        <ul class="likert">
            <div class="slidecontainer">
                <p>1<input type="range" min="1" max="5" value="3">5</p>
             </div>
        </ul>

        <!-- How easily distracted are you? -->
        <label for="easilyDistracted">How easily distracted are you? </label>
        <ul class="likert">
            <div class="slidecontainer">
                <p>1<input type="range" min="1" max="5" value="3">5</p>
             </div>
        </ul>

        <!-- How much are you bothered by worries? -->
        <label for="worries">How much are you bothered by worries? </label>
        <ul class="likert">
            <div class="slidecontainer">
                <p>1<input type="range" min="1" max="5" value="3">5</p>
             </div>
        </ul>

        <!-- Do you find it difficult to concentrate on things? -->
        <label for="concentration">Do you find it difficult to concentrate on things? </label>
        <ul class="likert">
            <div class="slidecontainer">
                <p>1<input type="range" min="1" max="5" value="3">5</p>
             </div>
        </ul>

        <!-- How often do you compare yourself to other successful people through the use of social media? -->
        <label for="comparison">How often do you compare yourself to other successful people on social media? </label>
        <ul class="likert">
            <div class="slidecontainer">
                <p>1<input type="range" min="1" max="5" value="3">5</p>
             </div>
        </ul>

        <!-- Following the previous question, how do you feel about these comparisons, generally speaking? -->
        <label for="comparisonFeelings">How do you feel about comparing yourself to others on social media? </label>
        <ul class="likert">
            <div class="slidecontainer">
                <p>1<input type="range" min="1" max="5" value="3">5</p>
             </div>
        </ul>
        

        <!-- How often do you look to seek validation from features of social media? -->
        <label for="validation">How often do you seek validation from features of social media? </label>
        <ul class="likert">
            <div class="slidecontainer">
                <p>1<input type="range" min="1" max="5" value="3">5</p>
             </div>
        </ul>

        <!-- How often do you feel depressed or down? -->
        <label for="depressed">How often do you feel depressed or down? </label>
        <ul class="likert">
            <div class="slidecontainer">
                <p>1<input type="range" min="1" max="5" value="3">5</p>
             </div>
        </ul>

        <!-- How frequently does your interest in daily activities fluctuate? -->
        <label for="interestFluctuation">How frequently does your interest in daily activities fluctuate? </label>
        <ul class="likert">
            <div class="slidecontainer">
                <p>1<input type="range" min="1" max="5" value="3">5</p>
             </div>
        </ul>

        <!-- How often do you face issues regarding sleep? -->
        <label for="sleepIssues">How often do you face issues regarding sleep? </label>
        <ul class="likert">
           <div class="slidecontainer">
               <p>1<input type="range" min="1" max="5" value="3">5</p>
            </div>
        </ul>


        <!-- Submit button -->
        <input type="submit" value="Submit">
    </form>
    <script>
        // Function to calculate the score
        function calculateScore(formData) {
            // Extract values from the formData object
            const purpose = formData.purpose || 0;
            const distraction = formData.distraction || 0;
            const restless = formData.restless || 0;
            const easilyDistracted = formData.easilyDistracted || 0;
            const worries = formData.worries || 0;
            const concentration = formData.concentration || 0;
            const comparison = formData.comparison || 0;
            const validation = formData.validation || 0;
            const depressed = formData.depressed || 0;
            const interestFluctuation = formData.interestFluctuation || 0;
            const sleepIssues = formData.sleepIssues || 0;

            // Calculate the score based on the provided formula
            const score = 100 - (((purpose + distraction + restless + easilyDistracted +
                                    worries + concentration + comparison + validation +
                                    depressed + interestFluctuation + sleepIssues - 11) * 25) / 12 +
                                    ((5 - comparison) * 25) / 12);

            return score;
        }

        // Function to handle form submission
        function handleSubmit(event) {
            event.preventDefault(); // Prevents the default form submission

            // Get form data
            const formData = {
                // Retrieve values from form elements
                // Note: You need to complete this based on your form structure
                purpose: parseInt(document.querySelector('input[name="purpose"]:checked').value, 10),
                distraction: parseInt(document.querySelector('input[name="distraction"]:checked').value, 10),
                restless: parseInt(document.querySelector('input[name="restless"]:checked').value, 10),
                easilyDistracted: parseInt(document.querySelector('input[name="easilyDistracted"]:checked').value, 10),
                worries: parseInt(document.querySelector('input[name="worries"]:checked').value, 10),
                concentration: parseInt(document.querySelector('input[name="concentration"]:checked').value, 10),
                comparison: parseInt(document.querySelector('input[name="comparison"]:checked').value, 10),
                validation: parseInt(document.querySelector('input[name="validation"]:checked').value, 10),
                depressed: parseInt(document.querySelector('input[name="depressed"]:checked').value, 10),
                interestFluctuation: parseInt(document.querySelector('input[name="interestFluctuation"]:checked').value, 10),
                sleepIssues: parseInt(document.querySelector('input[name="sleepIssues"]:checked').value, 10)
            };

            // Calculate the score
            const score = calculateScore(formData);

            // Log or use the score as needed
            console.log('Calculated Score:', score);
        }

        // Attach event listener to the form
        document.getElementById('surveyForm').addEventListener('submit', handleSubmit);
    </script>
</body>
</html>